<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Green_Light.ConditionsPage"
             Title="ConditionsPage">
    <Grid RowDefinitions="*,*,5*"
          ColumnDefinitions="3*,2*">
        
        <Label  Grid.ColumnSpan="2"
                Text="0h 40min"
                FontSize="40"
                HorizontalOptions="Center"
                VerticalOptions="Center"
                />

        <Line Grid.Row="1"
              Grid.ColumnSpan="5"
              X2="10000"              
              Stroke="Black"
              />

        <Label Grid.Row="1"
                    Grid.Column="0"
                    Text="Supervisor:"
                    FontSize="30"
                    HorizontalOptions="Center"
                    VerticalOptions="Center"
                    />

        <Picker Grid.Row="1"
                     Grid.Column="1"
                     HorizontalOptions="Center"
                     VerticalOptions="Center"
                     FontSize="30">
            <Picker.ItemsSource>
                <x:Array Type="{x:Type x:String}">
                    <x:String>Mum</x:String>
                    <x:String>Dad</x:String>
                </x:Array>
            </Picker.ItemsSource>
            <Picker.SelectedItem>0</Picker.SelectedItem>
        </Picker>

        <CollectionView x:Name="collectionView"
                        ItemsSource="{Binding clnDriveConditions}"
                        SelectionMode="Multiple"
                        SelectedItems="{Binding clnSelectedDriveConditionsB}"
                        ItemsLayout="VerticalGrid, 4"
                        Grid.Row="3"
                        Grid.ColumnSpan="2">
            
            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <Grid RowDefinitions="3*,*"
                          Padding="5"
                          RowSpacing="5"
                          ColumnSpacing="5"
                          >

                        <Image Grid.Row="0"
                               Source="{Binding strImageURL}"
                               Aspect="AspectFill"
                               />

                        <Label Grid.Row="1"
                               Text="{Binding strName}"
                               />

                    </Grid>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>
    </Grid>
</ContentPage>